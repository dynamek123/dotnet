@model IEnumerable<ProjektSklepGryWideo.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
    decimal sum = 0;
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Game.Title) 
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                
                    <form asp-action="Delete" asp-route-id="@item.Id">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                   </form>
            </td>
        </tr>
            sum = sum + item.Price;
        }
    <tr>
        
    </tr>
    </tbody>
    <tr>
        <td></td>
        <td></td>
        <td>Final Price: </td>
        <td>
            @sum
        </td>
       
        <td>
            <form asp-action="PlaceOrder" asp-controller="CartItems" method="post">
                <button type="submit" class="btn btn-success">Place Order</button>
            </form>
        </td>
    </tr>
</table>

